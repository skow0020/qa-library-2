{
    "extends": [
        "react-app",
        "react-app/jest",
        "plugin:react/recommended",
        "plugin:testing-library/react",
        "plugin:jest-dom/recommended"
    ],
    "plugins": [
        "testing-library",
        "jest-dom"
    ],
    "ignorePatterns": ["build/**"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": [1, { "skipUndeclared": true }],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
